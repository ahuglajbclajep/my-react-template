{
  /* format */
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // see https://code.visualstudio.com/updates/v1_31#_fix-all-source-actions,
  // https://code.visualstudio.com/updates/v1_44#_explicit-ordering-for-code-actions-on-save
  // and https://code.visualstudio.com/updates/v1_46#_add-all-missing-imports-source-action
  "editor.codeActionsOnSave": {
    "source.addMissingImports": true,
    "source.organizeImports": true,
    "source.fixAll.stylelint": true,
    "source.fixAll.eslint": true
  }

  /* other */
  // see https://github.com/microsoft/TypeScript/issues/19566
  // "typescript.locale": "ja"
}
